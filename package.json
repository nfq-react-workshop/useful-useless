{
  "name": "useful-useless",
  "version": "1.0.0",
  "description": "Sveikiname prisijungus prie React mokymų. Per keturias paskaitas lektoriai jums trumpai pristatys itin populiarią React biblioteką ir kitus šiuolaikinius frontend programavimo įrankius.",
  "scripts": {
    "start": "rimraf .cache && parcel src/index.html --open",
    "build": "rimraf dist && parcel build src/index.html --no-cache --no-source-maps --detailed-report",
    "server": "json-server --watch ./src/mocks/data.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.jsx": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.scss": [
      "stylelint --syntax scss",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nfq-react-workshop/useful-useless.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nfq-react-workshop/useful-useless/issues"
  },
  "homepage": "https://github.com/nfq-react-workshop/useful-useless#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "bulma": "^0.7.2",
    "font-awesome": "^4.7.0",
    "json-server": "^0.14.0",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1"
  },
  "devDependencies": {
    "acorn": "^6.0.4",
    "babel-eslint": "^10.0.1",
    "csslint": "^1.0.5",
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-immutable": "^1.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "parcel-bundler": "^1.10.3",
    "postcss-modules": "^1.4.1",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "sass": "^1.14.3",
    "stylelint": "^9.7.1",
    "stylelint-config-recommended": "^2.1.0"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  }
}
